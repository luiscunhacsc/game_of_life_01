{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file with SDL2",
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-IC:\\CLibraries\\SDL2\\SDL2-devel-2.28.5-VC\\SDL2-2.28.5\\include",
                "-LC:\\CLibraries\\SDL2\\SDL2-devel-2.28.5-VC\\SDL2-2.28.5\\lib\\x64",
                "-lSDL2main",
                "-lSDL2"
            ],            
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiler task with SDL2 integration."
        }
    ]
}